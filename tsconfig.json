{
  "compilerOptions" : {
    "module" : "commonjs",
    "moduleResolution" : "node",
    "pretty" : true,
    "sourceMap" : true,
    "target" : "es2017",
    "outDir" : "./dist",
    "baseUrl" : "./src",
    "paths" : {
      "*" : [
        "node_modules/*",
        "src/types/*"
      ]
    },
    "lib" : [
      "es2017"
    ]
  },
  "include" : [
    "src/**/*.ts"
  ],
  "exclude" : [
    "node_modules"
  ]
}